<form method="post">
    {{ form_start(form) }}
  <table>
    {% for field in form %}
         {% set i = loop.index0 %}
         
        {% if attribute(items, i) is defined %}
        <tr class="form-row">
           
 
                    {% for property in items.(i).html5 %}
                    {% set p = loop.index0 %}
                    {% set currentAttribut = items.(i).attributes|keys[p] %}
                    
                        {% if currentAttribut == 'alias' %}
                            <td class="product-count">
                                {{ form_widget(field) }}
                           

                            {% if field in form_errors(form) %}
                                <div class="form-errors">
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                            </td>
                        {% else %}
                        <td class="product-{{ currentAttribut }}">
                            {{ property|raw }}
                            {% if currentAttribut == 'price' %}
                                €
                            {% endif %}
                        </td>
                        {% endif %}
                     {% endfor %}
                
          
            
               <td class="product-remove">
                    {% set product_id = items.(i).raw.id %}
                    <a href='{{ url }}?remove={{ product_id }}' title='Produkt aus den Warenkorb entfernen'>Entfernen</a>
                 </td>       
                
        </tr>
        {% else %}
        {% if field.vars.name == 'aktualisieren' %}

        <tr class="cart-subtotal">
            <td >
                   Zwischensumme:
            </td>
             <td >
             {{ summary.subtotal}}
          
            </td>
        </tr>
        {% for id,tax in summary.taxsubtotal %}
            <tr class="cart-tax">
            <td >
             {% for k,taxType in summary.tax %}
                {% if taxType.id == id %}
                   {{ taxType.name }}
                {% endif %}
            {% endfor %}
            </td>
            <td >
                   {{ tax }} €
                </td>
            </tr>
        {% endfor %}
        <tr class="cart-total">
            <td >
                   Summe:
            </td>
             <td >
             {{ summary.total}}
         
            </td>        </tr>
        {% endif %}
        <tr class="form-submit">
        <td class="form-input">
                {{ form_widget(field) }}
            </td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>

    {{ form_end(form) }}
</form>
