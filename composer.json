{
    "name": "birdsinthesun/mm_shop",
    "type": "contao-bundle",
    "description": "Ein kleiner Shop fÃ¼r MetaModels. Theme: https://packagist.org/packages/birdsinthesun/contao-theme-ara",
    "keywords": [
        "contao",
        "metamodels",
        "mm",
        "shop",
        "ecommerce",
        "mm_shop"
    ],
    "homepage": "https://github.com/birdsinthesun/mm_shop",
    "license": "MIT",
    "version": "main",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Monique Hahnefeld",
            "email": "info@birdsinthesun.de",
            "homepage": "https://birdsinthesun.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/routing": "^6.4",
        "contao/core-bundle": "5.3.*",
        "symfony/form": "^6.4",
        "twig/extra-bundle": "^3.21",
        "twig/twig": "^3.21",
        "symfony/twig-bridge": "^6.4",
        "symfony/security-csrf": "^6.4",
        "symfony/validator": "^6.4",
        "symfony/mailer": "*",
        "mpdf/mpdf": "*"
    },
    "autoload": {
        "psr-4": {
            "Bits\\MmShopBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "repositories": [
          {
            "type": "path",
            "url": "../birdsinthesun/mm_shop",  
            "options": {
              "symlink": true
            }
          }
        ],
    "extra": {
        "contao-manager-plugin": "Bits\\MmShopBundle\\ContaoManager\\Plugin",
        "contao-component-dir": "assets",
        "public-dir": "public",
        "twig": {
            "paths": {
                "views": "MmShop"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php bin/console asset:install --relative",
            "@php vendor/bin/contao-setup"
        ],
        "post-update-cmd": [
            "@php bin/console asset:install --relative",
            "@php vendor/bin/contao-setup"
        ]
    }
}